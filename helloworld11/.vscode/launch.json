    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/test/node_modules/mocha/bin/mocha",
            "args": [
                "--inspect-brk",
                "*.test.js"
            ],
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart",
            "cwd": "${workspaceFolder}/test"
        },
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "file": "${workspaceFolder}/client/index.html"
        }
    ]
}